                android:paddingStart="8dp"
                android:text="@string/answer_04c"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/content_body_copy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="@string/question_05_title"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/content_body_copy"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:text="@string/question_05"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_body_copy" />

                <ImageButton
                    android:id="@+id/question_5_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@null"
                    android:contentDescription="@string/hint_icon_question5"
                    android:onClick="hintQuestion5"
                    android:src="@drawable/hint_icon_32dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/answer_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans"
                android:hint="@string/answer_05_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:paddingBottom="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/content_body_copy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="@string/question_06_title"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/content_body_copy"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:text="@string/question_06"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_body_copy" />

                <ImageButton
                    android:id="@+id/question_6_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@null"
                    android:contentDescription="@string/hint_icon_question6"
                    android:onClick="hintQuestion6"
                    android:src="@drawable/hint_icon_32dp" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/CheckBox6a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
