<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.claudemonetwaterliliesquiz.quizContent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/quiz_content_image_1"
            android:scaleType="centerCrop"
            android:src="@drawable/the_water_lilies__the_clouds" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/content_text_padding"
            android:paddingRight="@dimen/content_text_padding">

            <TextView
                android:id="@+id/quiz_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald_light"
                android:gravity="center"
                android:text="@string/main_quiz_title"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/quiz_description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="36dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:text="@string/quiz_description"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="@string/question_01_title"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/content_body_copy"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:text="@string/question_01"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_body_copy" />

                <ImageButton
                    android:id="@+id/question_1_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@null"
                    android:contentDescription="@string/hint_icon_question1"
                    android:onClick="hintQuestion1"
                    android:src="@drawable/hint_icon_32dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/answer_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans"
                android:hint="@string/answer_01_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:paddingBottom="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/content_body_copy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="@string/question_02_title"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/content_body_copy"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:text="@string/question_02"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_body_copy" />

                <ImageButton
                    android:id="@+id/question_2_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@null"
                    android:contentDescription="@string/hint_icon_question2"
                    android:onClick="hintQuestion2"
                    android:src="@drawable/hint_icon_32dp" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/CheckBox2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:checked="false"
                android:fontFamily="@font/open_sans"
                android:paddingEnd="0dp"
                android:paddingLeft="8dp"
                android:paddingRight="0dp"
                android:paddingStart="8dp"
                android:text="@string/answer_02a"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <CheckBox
